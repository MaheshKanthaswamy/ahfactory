@{
    Layout = "~/Views/Shared/_LogOnLayout.cshtml";
}

<div class="row">
    <div class="small-12 medium-5 large-4 medium-centered columns">
        <div class="logon-form">
            <div class="email-login">
                <p class="mar-bottom">@Html.Lang("forgot.password.mail.sent")</p>
                <div class="text-right">
                    <a class="button no-mar-bottom" href="@Url.Action("LogOn", "User", new { area = "" })">@Html.Lang("back")</a>
                </div>
            </div>
        </div>
    </div>
</div>