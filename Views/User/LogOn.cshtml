@model LogOnModel

@{
    Layout = "~/Views/Shared/_LogOnLayout.cshtml";
}

<div class="row">
    <div class="small-12 medium-5 large-4 medium-centered columns">
        <div class="logon-form">
            @using (Html.BeginForm("LogOn", "User", FormMethod.Post, new { id = "logOnForm" }))
            {
                <fieldset>
                    @Html.ValidationMessage("")
                    <legend>@Html.Lang("authentification")</legend>

                    <label for="Login">@LangHelper.Translate("email")</label>
                    <div class="ftel-editor-field">
                        @Html.TextBoxFor(m => m.Login)
                        @Html.ValidationMessageFor(m => m.Login)
                    </div>

                    @Html.LabelFor(m => m.Password)
                    <div class="ftel-editor-field">
                        @Html.PasswordFor(m => m.Password)
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>

                    @Html.HiddenFor(m => m.ReturnUrl)

                    <div class="text-right">
                        <button type="submit" class="button">@Html.Lang("log.on") <i class="fa fa-sign-in"></i></button>
                    </div>
                </fieldset>
            }

            <div><i class="fa fa-angle-double-right"></i> <a href="@Url.Action("Register", "User", new { area = "" })">@Html.Lang("ask.access")</a></div>
            <div><i class="fa fa-angle-double-right"></i> <a href="@Url.Action("ForgotPassword", "User", new { area = "" })">@Html.Lang("password.forgot")</a></div>
        </div>
    </div>
</div>