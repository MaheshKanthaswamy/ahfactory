<div class="row">
    <div class="columns small-12 medium-12 large-12">

        @(Html.Kendo().Grid<ClientTypeGridModel>()
              .Name("ClientTypeGridModel")
              .ToolBar(e => e.Create())
              .Editable(editable => editable.Mode(GridEditMode.InLine))
              .Columns(columns =>
              {
                  columns.Bound(m => m.Name);
                  columns.Command(commands =>
                  {
                      commands.Edit();
                      commands.Destroy();
                  }).Width(262).Title(LangHelper.Translate("actions"));
              })
              .DataSource(dataSource => dataSource
                  .Ajax()
                  .Read("Read", "ClientType")
                  .Update("CreateOrUpdate", "ClientType")
                  .Create("CreateOrUpdate", "ClientType")
                  .Destroy("Delete", "ClientType")
                  .Model(model =>
                  {
                      model.Id(c => c.Id);
                  })
                  .Sort(o => o.Add(s => s.Name))
              )
              .Pageable(p => p.Refresh(true))
              .Sortable(sorting => { sorting.SortMode(GridSortMode.SingleColumn); })
              .Filterable()
        )
    </div>
</div>
